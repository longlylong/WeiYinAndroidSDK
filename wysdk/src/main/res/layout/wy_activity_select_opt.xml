<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wy_bg_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/select_opt_product"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/wy_selectable_item_background"
                android:gravity="center"
                android:text="我的作品"
                android:textColor="@color/wy_bg_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/wy_bg_opt_line" />

            <TextView
                android:id="@+id/select_opt_shop_cart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/wy_selectable_item_background"
                android:gravity="center"
                android:text="购物车"
                android:textColor="@color/wy_bg_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/wy_bg_opt_line" />

            <TextView
                android:id="@+id/select_opt_my_order"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/wy_selectable_item_background"
                android:gravity="center"
                android:text="我的订单"
                android:textColor="@color/wy_bg_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/wy_bg_opt_line" />

            <TextView
                android:id="@+id/select_opt_about"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/wy_selectable_item_background"
                android:gravity="center"
                android:text="实物介绍"
                android:textColor="@color/wy_bg_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/wy_bg_opt_line" />

            <TextView
                android:id="@+id/select_opt_about_q"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/wy_selectable_item_background"
                android:gravity="center"
                android:text="常见问题"
                android:textColor="@color/wy_bg_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/wy_bg_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/select_opt_exit"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:background="@drawable/wy_selectable_item_background"
                android:gravity="center"
                android:text="退出制作"
                android:textColor="@color/wy_bg_black" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
